<div
  id="<%= dom_id card %>"
  data-action="mouseover->select-card#select mouseleave->select-card#deselect"
  data-search-text="<%= "#{card.name} #{card.mtg_set.code} #{card.collector_number}" %>"
  class="
    bg-white rounded shadow transition-transform duration-300 ease-in-out p-2 flex
    flex-col items-center hover:shadow-lg cursor-pointer
  "
>
  <div class="w-full bg-gray-200 rounded overflow-hidden">
    <img
      src="https://cards.scryfall.io/normal/front/<%= card.scryfall_id[0] %>/<%= card.scryfall_id[1] %>/<%= card.scryfall_id %>.jpg"
      alt="<%= card.name %>"
      class="w-full h-full object-cover"
    />
  </div>

  <div class="mt-2 text-center text-sm">
    <p class="font-semibold"><%= card.name %></p>
    <p class="text-gray-500"><%= card.mtg_set.code %>
      â€¢ #<%= card.collector_number %></p>
  </div>
</div>
