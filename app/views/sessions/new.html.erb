<div class="mx-auto md:w-2/3 w-full max-w-xl mt-12 px-4">
  <% if alert = flash[:alert] %>
    <p
      class="
        py-2 px-3 mb-5 text-red-700 bg-red-100 dark:bg-red-900 dark:text-red-300 border
        border-red-300 dark:border-red-700 rounded-lg font-medium
      "
      id="alert"
    >
      <%= alert %>
    </p>
  <% end %>

  <% if notice = flash[:notice] %>
    <p
      class="
        py-2 px-3 mb-5 text-green-700 bg-green-100 dark:bg-green-900 dark:text-green-300
        border border-green-300 dark:border-green-700 rounded-lg font-medium
      "
      id="notice"
    >
      <%= notice %>
    </p>
  <% end %>

  <h1
    class="
      text-4xl font-bold text-gray-800 dark:text-gray-100 mb-8 text-center
    "
  >Sign in</h1>

  <%= form_with url: session_url, class: "space-y-6" do |form| %>
    <!-- Email -->
    <div>
      <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email Address</label>
      <%= form.email_field :email_address,
                       required: true,
                       autofocus: true,
                       autocomplete: "username",
                       placeholder: "Enter your email address",
                       value: params[:email_address],
                       class:
                         "mt-2 w-full px-4 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <!-- Password -->
    <div>
      <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Password</label>
      <%= form.password_field :password,
                          required: true,
                          autocomplete: "current-password",
                          placeholder: "Enter your password",
                          maxlength: 72,
                          class:
                            "mt-2 w-full px-4 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <!-- Submit + Forgot password -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <%= form.submit "Sign in",
                  class:
                    "w-full sm:w-auto bg-blue-600 hover:bg-blue-500 text-white font-medium px-5 py-2.5 rounded-md transition" %>

      <%= link_to "Forgot password?",
      new_password_path,
      class: "text-sm text-gray-600 dark:text-gray-400 underline hover:no-underline" %>
    </div>
  <% end %>
</div>
