<div
  data-import-modal-target="modal"
  data-action="click->import-modal#close"
  class="
    fixed inset-0 z-50 backdrop-blur-sm bg-black/30 hidden flex items-center
    justify-center
  "
>
  <div
    class="
      bg-white dark:bg-gray-800 rounded shadow-xl max-w-md w-full mx-4 p-6 relative
    "
  >
    <!-- Close button -->
    <button
      class="
        absolute top-2 right-3 text-gray-400 hover:text-gray-600
        dark:hover:text-gray-300 cursor-pointer
      "
      data-close="true"
      aria-label="Close modal"
    >
      âœ–
    </button>

    <h2 class="text-lg font-semibold mb-4 text-gray-800 dark:text-gray-200">
      ðŸ“„ Import a Collection
    </h2>

    <%= form_with url: import_collections_path, method: :post, local: true, html: { multipart: true } do |form| %>
      <div class="mb-4">
        <%= form.label :file,
                   "Upload Manabox collection (csv)",
                   class:
                     "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= form.file_field :file,
                        required: true,
                        accept: ".csv",
                        class:
                          "w-full border border-gray-300 dark:border-gray-600 rounded px-3 py-2 bg-white dark:bg-gray-700 text-gray-800 dark:text-gray-100 shadow-sm focus:ring-2 focus:ring-blue-500 cursor-pointer" %>
      </div>

      <div class="flex justify-end gap-2">
        <button
          type="button"
          data-close="true"
          class="
            px-4 py-2 rounded border border-gray-300 dark:border-gray-600 text-gray-700
            dark:text-gray-300 bg-gray-100 dark:bg-gray-700 hover:bg-gray-200
            dark:hover:bg-gray-600 transition cursor-pointer
          "
        >
          Cancel
        </button>

        <%= form.submit "Import Collection",
                    class:
                      "bg-blue-600 hover:bg-blue-500 text-white font-medium px-4 py-2 rounded shadow transition cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
